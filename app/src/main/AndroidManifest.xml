<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.term_tracker">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TermTracker"
        tools:targetApi="31">
        <activity
            android:name=".DeleteMe"
            android:exported="false" />
        <activity
            android:name="DetailsActivity.NoteDetailsActivity"
            android:exported="false" />
        <activity
            android:name="DetailsActivity.AssessmentDetailsActivity"
            android:exported="false" />
        <activity
            android:name="DetailsActivity.CourseDetailsActivity"
            android:exported="false" />
        <activity
            android:name="DetailsActivity.TermDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".NoteEditActivity"
            android:exported="false" />
        <activity
            android:name=".AssessmentEditActivity"
            android:exported="false" />
        <activity
            android:name=".CourseEditActivity"
            android:exported="false" />
        <activity
            android:name=".TermEditActivity"
            android:exported="false" />
        <activity
            android:name=".LookingActivity"
            android:exported="false"
            android:label="TERMS" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.TermTracker.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".NotificationBroadcast" />
    </application>

</manifest>